
<%- include("partials/header") -%>
<div class="container">
  <div class="row my-4">
      <div class="col-lg-6 mx-auto mt-4">
        <form class="" action="/add" method="post" id="add-form" enctype="multipart/form-data">
          <legend class="btn btn-dark"><h3>Add Users Content</h3></legend>
          <div class="mb-3">
            <label for="InputEmail1" class="form-label">Name</label>
            <input type="text" class="form-control" id="InputName" aria-describedby="nameHelp" name="name" required>
          </div>
          <div class="mb-3">
            <label for="InputEmail1" class="form-label">Email address</label>
            <input type="email" class="form-control" id="InputEmail1" aria-describedby="emailHelp" name="email" required>
          </div>
          <div class="mb-3">
            <label for="InputPassword" class="form-label">Phone</label>
            <input type="text" class="form-control" id="InputPassword" name="phone" required>
          </div>
          <div class="mb-3 form-check">
            <label for="myfile" >Select a file:</label>
            <input type="file" id="myfile" name="image" >
          </div>
          <button type="submit" class="btn btn-dark"><h5>Add User</h5></button>
        </form>
      </div>
  </div>
</div>


<%- include("partials/footer") -%>